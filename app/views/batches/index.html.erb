<div class="text-left">
  <h4>
    <%= form_tag(batches_path, method: :get) do %>
    <%= text_field_tag :number, params[:number], placeholder: "Fill the nubmer of the batch" %>
    <%= submit_tag 'Search', name: nil %>
    <% end %>
  </h4>
</div>
<div class="row">
  <% @batches.each do |batch| %>
    <div class="col-sm-6 text-center">
      <div class="form-group">
        <h3><b><%= link_to 'Batch # ' + batch.number, batch_path(batch.id) %></b></h3>
      </div>
      <div class="form-group">
        <h3><%= batch.start %>  to  <%= batch.end %></h3>
      </div>
      <% if batch.students.length > 0 %>
        <div class="form-group">
          <h3><%= batch.students.length %> students</h3>
        </div>
      <% else %>
        <div class="form-group">
          <h3>Not added any student yet</h3>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<h3>Create a new batch?</h3>
<%= render 'form' %>
